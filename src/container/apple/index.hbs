<div class='page'>
  {{#with header}}
    <div class='header'>
      <header class='header__content'>
        <div class='header__block'>
          <img
            src='/svg/apple.svg'
            alt='apple'
            class='header_icon'
          />
          <nav class='header__block'>
            {{#each links}}
              <a
                href='{{url}}'
                class='header__link'
              >{{text}}</a>
            {{/each}}
          </nav>
        </div>

        <div class='header__block'>
          <img
            src='/svg/search.svg'
            alt='Search'
            class='header__icon'
          />
          <img
            src='/svg/profile.svg'
            alt='Profile'
            class='header__icon'
          />
        </div>

      </header>
    </div>

    <div class='header header--undercap'>
      <header class='header__content'>
        {{#with ad}}
          <div
            class='header__block undercap--text'
          >{{title}}</div>

          <div class='header__block'>
            <a
              href='{{link.url}}'
              class='product__link undercap--text'
            >{{link.text}}</a>
          </div>
